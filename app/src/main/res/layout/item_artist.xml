<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?attr/colorSurface"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    tools:ignore="WebViewLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Artist Name -->
        <TextView
            android:id="@+id/text_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            tools:text="Artist Name" />

        <!-- Artist Genre -->
        <TextView
            android:id="@+id/text_artist_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            tools:text="Genre" />

        <!-- WebView for Spotify track embedding with fixed height -->
        <WebView
            android:id="@+id/webview_artist_track"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Horizontal layout for Update and Delete icon buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="4dp">

            <ImageButton
                android:id="@+id/button_update_artist"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/update_button_description"
                app:tint="?attr/colorOnSurface" />

            <ImageButton
                android:id="@+id/button_delete_artist"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/delete_button_description"
                app:tint="?attr/colorOnSurface" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
